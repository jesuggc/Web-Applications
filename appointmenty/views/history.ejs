        <%-include('partials/adminNavbar') %>
          <div id="panel" class=" alignJustify mb-3">
              <div class="col">
                <div class="row mx-4">
                  <div class="col-4">
                    <h1>Buscar usuario:</h1>
                    <!-- Buscador -->
                    <input id="userSearcher" type="text">
                  </div>
                  <div id="showUsers" class="col-8 scrollable whitesmoke">
