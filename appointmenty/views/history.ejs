                          <h3 class="nombreInstalacion">Laboratorio C</h3>
                        </div>
                        <div class=" cardBody row h-100 w-100 d-flex align-items-end">
                          <h5 class="fechaReserva">17/12/2023</h5>
                        </div>
                      </div>
                      <% } %>
                    </div>
                  </div>
                  <!-------------------->
                </div>
                <div class="row mx-4 detailsWidth">
                  <h1 id="detailsTitle" class="d-none ">Detalles de la reserva</h1>
                  <div class="row text-center claret text-white mx-4 rounded-3 d-flex align-items-center " >
                    <div class="primera col">
                      <!-- Columna de detalles 1 -->
                    </div>
                    <div class="segunda col">
                      <!-- Columna de detalles 2 -->
                    </div>
                  </div>
                </div>
              </div>
          </div>
      </div>   
    </div>   

    <%-include('partials/footer') %>
    <script src="/javascripts/history.js"></script>
  </body>
</html>
