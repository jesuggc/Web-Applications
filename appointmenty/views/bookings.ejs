<!DOCTYPE html>
<html>
  <%-include('partials/head') %>
  <body class="pistachio">
    <%-include('partials/header')%>
    <div class="row pistachio mx-1">
      <h1>Sistema de reservas</h1>
      <form>
        <% if(locals.user) { %>
          <% if(locals.user.admin === 1) { %>
        <div class="row">
          <div class="col">
            <h4 class="my-3">Facultad:</h4>
            <select id="facultad" name="facultad"  required>
              <% facultades.forEach( ele=> { %>
                <option value="<%=ele.id%>#<%=ele.nombre%>"><%=ele.nombre%></option>
                <%})%>
              </select>
            </div>
          </div>
          <% } %>
        <% } %>
        <div class="row my-2">
          <div class="col" id="tipoContainer">
            <h4 class="my-3">Tipo de instalacion:</h4>
            <select id="tipo" name="tipo"  required>
              <option hidden selected>Selecciona una opción</option>
              <% options.forEach( ele=> { %>
                <option value="<%=ele.id%>#<%=ele.nombre%>#<%=ele.ini%>#<%=ele.fin%>"><%=ele.nombre%></option>
              <%})%>
            </select> 
          </div>
          <div class="col" id="salaContainer">
            <h4 class="my-3">Sala:</h4>
            <select id="sala" name="sala"  required>
              <option hidden selected>Selecciona una opción</option>
            </select>
          </div>
          <div class="col" id="numeroContainer">
            <h4 class="my-3">Numero de usuarios:</h4>
            <input id="aforo" type="number" name="numero" placeholder="Usuarios" min="1" required>
          </div>
          <div class="col" id="calendarContainer" >
            <h4 class="my-3">Calendario:</h4>
            <input id="calendario" type="date" name="dia" placeholder="Día" required>
          </div>
        </div>
      </form>
    </div>
    <div id="horario" style="display:none" class="container  ">
      <h4 class="my-3">Horas:</h4>
      <div class="row m-2 d-flex justify-content-center claret rounded-4 p-5 my-3">
        <div id="9"  style="max-width:50px;height:45px; cursor:pointer" class="hora rounded-1 mx-2 col disponible"><h5 style="margin-left:-35px; margin-top: -30px">9:00</p></div>
        <div id="10" style="max-width:50px;height:45px; cursor:pointer" class="hora rounded-1 mx-2 col disponible"><h5 style="margin-left:-35px; margin-top: -30px">10:00</p></div>
        <div id="11" style="max-width:50px;height:45px; cursor:pointer" class="hora rounded-1 mx-2 col disponible"><h5 style="margin-left:-35px; margin-top: -30px">11:00</p></div>
        <div id="12" style="max-width:50px;height:45px; cursor:pointer" class="hora rounded-1 mx-2 col disponible"><h5 style="margin-left:-35px; margin-top: -30px">12:00</p></div>
        <div id="13" style="max-width:50px;height:45px; cursor:pointer" class="hora rounded-1 mx-2 col disponible"><h5 style="margin-left:-35px; margin-top: -30px">13:00</p></div>
        <div id="14" style="max-width:50px;height:45px; cursor:pointer" class="hora rounded-1 mx-2 col disponible"><h5 style="margin-left:-35px; margin-top: -30px">14:00</p></div>
        <div id="15" style="max-width:50px;height:45px; cursor:pointer" class="hora rounded-1 mx-2 col disponible"><h5 style="margin-left:-35px; margin-top: -30px">15:00</p></div>
        <div id="16" style="max-width:50px;height:45px; cursor:pointer" class="hora rounded-1 mx-2 col disponible"><h5 style="margin-left:-35px; margin-top: -30px">16:00</p></div>
        <div id="17" style="max-width:50px;height:45px; cursor:pointer" class="hora rounded-1 mx-2 col disponible"><h5 style="margin-left:-35px; margin-top: -30px">17:00</p></div>
        <div id="18" style="max-width:50px;height:45px; cursor:pointer" class="hora rounded-1 mx-2 col disponible"><h5 style="margin-left:-35px; margin-top: -30px">18:00</p></div>
        <div id="19" style="max-width:50px;height:45px; cursor:pointer" class="hora rounded-1 mx-2 col disponible"><h5 style="margin-left:-35px; margin-top: -30px">19:00</p></div>
        <div id="20" style="max-width:50px;height:45px; cursor:pointer" class="hora rounded-1 mx-2 col disponible"><h5 style="margin-left:-35px; margin-top: -30px">20:00</p></div>
        </div>
        <button id="enviar" class="btn btn-primary float-end me-2 btn-lg ">Reservar</button>
    </div>



    <div class="toast-container position-fixed bottom-0 end-0 p-3">
      <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
          <strong class="me-auto">Atención</strong>
          <small>justo ahora</small>
          <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
          Hello, world! This is a toast message.
        </div>
      </div>
    </div>
    
       

    
    <script src="/javascripts/mydriver.js"></script>
    <script src="/javascripts/calendar.js"></script>
    <%-include('partials/footer') %>
  </body>
</html>
