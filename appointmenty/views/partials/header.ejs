<header class="sticky-top pistachio" >
  <div class="d-flex justify-content-between align-items-center">
    <div class="align-items-start">
      <a href="/"><img class="h-auto " style="max-height: 10vh;" src="/admin/getLogo"></a>

    </div>
    <% if(!locals.user) { %>
      <div>
        <a href="/users/login"><button class="btn btn-primary me-3">Iniciar sesión</button></a>
      </div>
    <% } else { %>  
      <div class="dropdown me-3">
        <button style="max-height: 10vh;" class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
          <%if(!locals.user.foto) { %>
            <img style="max-height: 8vh;" class="rounded-circle borderProfile" src="/images/noPicture.jpg">
          <%} else {%>  
            <img style="max-height: 8vh;" class="rounded-circle borderProfile" src="/users/profilePhoto/<%=user.id%>">
          <% }%> 
        </button>
        <ul class="dropdown-menu text-center">
          <li><h5><%=locals.user.nombre%> <%=locals.user.apellido1%></h5><p><%=locals.user.correo%></p></li>
          <hr>
          <% if(locals.user.admin === 1) { %>
            <li><a class="dropdown-item bg-danger" href="/admin">Panel de administrador</a></li>
            <hr>
          <% }%> 
          <li><a class="dropdown-item" href="/users/correo">Correo UCM</a></li>
          <hr>
          <li><a class="dropdown-item bg-danger" href="/users/logout">Cerrar sesión</a></li>
        </ul>
      </div>
    <% } %>
  </div>
</header>